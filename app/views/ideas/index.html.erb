<h1>Listing ideas</h1>

<% @ideas.in_groups_of(4) do |group| %>
  <div class="row">
    <% group.compact.each do |idea| %>
      <div class="span3">
        <%= image_tag idea.picture_url, :width => '100%' if idea.picture.present? %>
        <!-- <%= image_tag idea.picture_url(:thumb) if idea.picture? %> // with thumbnails -->
        <h4><%= link_to idea.name, idea %></h4>
        <%= idea.description %>
      </div>
    <% end %>
  </div>
<% end %>



